<p id="notice"><%= notice %></p>
<h3><%= "@#{@tweet.user.username}" %>'s Tweet</h3>
<div class="well">
	<p>
		<% if current_user.avatar.blank? %>
			<%= image_tag "iphone6.jpeg" %>
		<% else %>
			<%= image_tag @tweet.user.avatar.url, size: 25 %>
		<% end %>
		<%= @tweet.user.name %>
		<%= "@#{@tweet.user.username}" %> 
		â€¢ <%= time_ago_in_words(@tweet.created_at) %>
	</p>
	<p><%= @tweet.message.html_safe %></p>
</div>


<%= link_to 'Edit', edit_tweet_path(@tweet), class: "btn btn-warning" %> |
<%= link_to 'Back', tweets_path, class: "btn btn-default" %>
