<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, autofocus: true,placeholder: "Your Name...", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :username %><br>
    <%= f.text_field :username, placeholder: "Your Username...", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :location %><br>
    <%= f.text_field :location, placeholder: "Your Location...", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :bio %><br>
    <%= f.text_area :bio, placeholder: "Bio...", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder: "Your Email...", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <strong>Upload Profile Picture:</strong>
    <%= f.file_field :avatar %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
